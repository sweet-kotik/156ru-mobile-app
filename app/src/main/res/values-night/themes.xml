<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.156ru" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Основной фон -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Акцентные цвета -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <!-- Текст -->
        <item name="android:textColorPrimary">@color/gray_dark</item>
        <item name="android:textColorSecondary">@color/gray_medium</item>

        <!-- Дополнительные элементы -->
        <item name="cardViewStyle">@style/CardView.Dark</item>
        <item name="chipStyle">@style/Chip.Dark</item>
        <item name="tabStyle">@style/Tab.Dark</item>
    </style>
    <style name="CardView.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Стиль для чипов -->
    <style name="Chip.Dark" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <!-- Стиль для табов -->
    <style name="Tab.Dark" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/gray_medium</item>
    </style>
</resources>